  #       fields: [{
  #         title: "My Field",
  #         value: "My Value",
  #         short: true
  #       }]
  #     }
  #   )
  # end

  # error do 
  #   slack(
  #     slack_url: "https://hooks.slack.com/services/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",
